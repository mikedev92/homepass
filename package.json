		"react-native-user-avatar": "^1.0.2",
		"react-native-vector-icons": "4",
		"react-native-video": "^1.0.0",
		"react-navigation": "^1.0.0-beta.11",
		"react-redux": "^5.0.4",
		"recompose": "^0.23.4",
		"redux": "^3.6.0",
		"redux-form": "^6.7.0",
