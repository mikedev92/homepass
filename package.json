{
	"name": "Homepass",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"start": "node_modules/react-native/packager/packager.sh",
		"test": "jest",
		"test-watch": "jest --watch",
		"test-coverage": "jest --coverage --runInBand",
		"android": "react-native run-android",
		"ios": "react-native run-ios",
		"flow": "flow",
		"flow-check": "flow check",
		"flow-generate-graphql": "gql2flow https://data-staging.homepass.com/graphql -o ./flow/graphql.js -i Node -t Date:string",
		"flow-generate-graphql-local": "gql2flow http://localhost:8443/graphql -o ./flow/graphql.js -i Node -t Date:string",
		"lint": "eslint ./src",
		"release-ios": "code-push release-react Homepass ios",
		"release-android": "code-push release-react Homepass android",
		"report-coverage": "CODACY_PROJECT_TOKEN=c6e8838914f54140b26139495534df7e codacy-coverage < coverage/lcov.info",
		"precommit": "lint-staged"
	},
	"dependencies": {
		"apollo-client": "^1.7.0",
